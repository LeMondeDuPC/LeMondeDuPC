{% extends 'base.html.twig' %}

{% block title %}Edit Locations{% endblock %}

{% block body %}
    <article class="post">
        <header>
            <div class="title">
                <h2>Modification d'une catégorie</h2>
            </div>
            <div class="meta">
                <a href="{{ path('partners_manage') }}">Retourner à la liste des partenaires</a>
            </div>
        </header>
        <section>
            {{ include('locations/form/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
            <form method="post" action="{{ path('locations_delete', {'id': location.id}) }}"
                  onsubmit="return confirm('Etes vous sûr de vouloir supprimer ce partenaire ?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ location.id) }}">
                <button class="btn">Delete</button>
            </form>
        </section>
    </article>
{% endblock %}
