{% extends is_mobile() ? 'base_mobile.html.twig' : 'base_default.html.twig' %}

{% block title %}Le Monde Du PC - Contact{% endblock %}

{% block description %}Page de contact pour diff√©rents types de demandes : partenariat, article, ou autre.{% endblock %}

{% block body %}
    <article class="post">
        <header>
            <div class="title">
                <h1 class="heading">Nous contacter</h1>
            </div>
        </header>
        <section>
            {% include('page/form/_contact_form.html.twig') %}
        </section>
    </article>
{% endblock %}
{% block scripts %}
    <script src="{{ asset('assets/plugins/tarteaucitron/tarteaucitron.js') }}"></script>
    <script type="text/javascript">
        tarteaucitron.init({
            "privacyUrl": "{{ path('page_about') }}#vie_privee",
            "hashtag": "#tarteaucitron",
            "cookieName": "tarteaucitron",
            "orientation": "bottom",
            "groupServices": false,
            "showAlertSmall": false,
            "cookieslist": false,
            "showIcon": true,
            "iconPosition": "BottomRight",
            "adblocker": false,
            "DenyAllCta": true,
            "AcceptAllCta": true,
            "highPrivacy": true,
            "handleBrowserDNTRequest": false,
            "removeCredit": false,
            "moreInfoLink": true,
            "useExternalCss": false,
            "readmoreLink": "{{ path('page_about') }}#vie_privee",
            "mandatory": true
        });
        (tarteaucitron.job = tarteaucitron.job || []).push('recaptcha');
    </script>
{% endblock %}