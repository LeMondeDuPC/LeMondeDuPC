{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <h1>Posts</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>TimePublication</th>
                <td>{{ post.timePublication ? post.timePublication|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IdLocation</th>
                <td>{{ post.idLocation }}</td>
            </tr>
            <tr>
                <th>IdUser</th>
                <td>{{ post.idUser }}</td>
            </tr>
            <tr>
                <th>Validated</th>
                <td>{{ post.validated }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('posts_index') }}">back to list</a>

    <a href="{{ path('posts_edit', {'id': post.id}) }}">edit</a>

    {{ include('posts/_delete_form.html.twig') }}
{% endblock %}
