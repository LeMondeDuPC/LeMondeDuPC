{% extends is_mobile() ? 'base_mobile.html.twig' : 'base_default.html.twig' %}

{% block title %}Classement des membres les plus actifs du mois{% endblock %}

{% block description %}Page mettant en valeur les membres les plus actifs de chaque mois.{% endblock %}

{% block head %}<meta name="robots" content="noindex" />{% endblock %}

{% block body %}
    <article class="post">
        <header>
            <div class="title">
                <h1 class="heading">Top 10 des membres les plus actifs du mois</h1>
            </div>
        </header>
        <section>
            <table class="table">
                <thead>
                <tr>
                    <th>Identifiant</th>
                    <th>Score</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td><a href="{{ path('user_show', {'id': user.id}) }}">{{ user.username }}</a></td>
                        <td>{{ user.score }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucun r√©sultat</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>
    </article>
{% endblock %}
