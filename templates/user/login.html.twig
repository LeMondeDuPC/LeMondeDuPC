{% extends is_mobile() ? 'base_mobile.html.twig' : 'base_default.html.twig' %}

{% block title %}Le Monde Du PC - Connexion{% endblock %}

{% block description %}Page de connexion permettant d'accéder à l'espace membre.{% endblock %}

{% block body %}
    <article class="post">
        <header>
            <div class="title">
                <h1 class="heading">Connexion</h1>
            </div>
        </header>
        <section>
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% include('user/form/_login_form.html.twig') %}
        </section>
    </article>
{% endblock %}