{% extends is_mobile() ? 'base_mobile.html.twig' : 'base_default.html.twig' %}

{% block title %}Le Monde Du PC - Modification d'une catégorie{% endblock %}

{% block description %}Page de modification d'une catégorie.{% endblock %}

{% block head %}<meta name="robots" content="noindex, nofollow" />{% endblock %}

{% block body %}
    <article class="post">
        <header>
            <div class="title">
                <h1 class="heading">Modification d'une catégorie</h1>
            </div>
            <div class="meta">
                <a href="{{ path('category_manage') }}">Retourner à la liste des catégories</a>
            </div>
        </header>
        <section>
            {{ include('category/form/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
            <form method="post" action="{{ path('category_delete', {'id': category.id}) }}"
                  onsubmit="return confirm('Confirmer la suppression ?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                <button class="button">Supprimer</button>
            </form>
        </section>
    </article>
{% endblock %}
